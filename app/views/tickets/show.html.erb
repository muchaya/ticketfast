<section class="w-3/4 mx-auto">
  <div class="flex items-center gap-x-6 px-1">
    <h2 class="block font-bold text-slate-700 text-lg"><%= @ticket.title %> Tickets</h2>
  </div>
  <div class="py-2 px-1 mb-12">
    <p class="text-slate-700">Tickets are not reserved yet, to secure your tickets, click <b>Next</b></p>
  </div>
  <div class="border-t border-b border-gray-300 px-1 flex items-center justify-between py-3">
    <div>
      <p class="text-slate-700 font-bold">Reserved Seating</p>
      <%= number_to_currency(@ticket.price , locale: :"en-ZA") %>
    </div>
    <div class="">
      <div class="flex items-center gap-x-3">
        <%= link_to line_items_path(ticket_id: @ticket.id), data: { turbo_method: :post } do %>
          <div class="bg-blue-500 text-white font-medium rounded-full h-10 w-10">
            <span class="text-white block text-3xl ml-[10px]">+</span>
          </div>
        <% end %>

        <p class="text-2xl text-slate-700"><%= @ticket.cart_quantity %></p>

        <%= link_to line_item_path(ticket_id: @ticket.id), data: { turbo_method: :delete } do %>
          <div class="bg-blue-500 text-white font-medium rounded-full h-10 w-10">
            <span class="text-white block text-3xl ml-[13px]">-</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="py-4 px-1">
    <div class="flex items-center justify-between">
      <div>
        <span class="w-8 h-2 bg-black block mb-2"></span>
        <h2 class="uppercase text-lg">Subtotal</h2>
        <p class=""><%= @ticket.cart_quantity %> tickets</p>
      </div>
      <div class="text-lg">
        <%= number_to_currency(@ticket.subtotal, locale: :"en-ZA") %>
      </div>
    </div>
  </div>
  <%= link_to "Next", cart_path(Current.cart), class: "bg-green-500 py-4 w-full block text-center text-white font-medium rounded-md"%>
</section>
