<div class="w-2/3 mx-auto">
  <h2 class="font-bold text-slate-700 text-lg mb-12">Cart summary</h2>

  <% Current.cart.tickets.each do |ticket| %>
    <div class="flex items-center justify-between border-b border-gray-300 py-3">
      <div>
        <p class="font-medium text-slate-700"><%= ticket.title %></p>
        <p class=" text-slate-500 text-sm"><%= ticket.cart_quantity %> tickets</p>
      </div>
      
      <p><%= format_rands(ticket.subtotal) %></p>
    </div>
  <% end %>

  <%= link_to "Proceed to checkout", checkouts_url, class: "mt-16 bg-green-500 py-4 w-full block text-center text-white font-medium rounded-md"%>
</div>
